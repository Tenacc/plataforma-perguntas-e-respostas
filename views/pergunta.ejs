<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <br>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <br>
        <br>
        <form action="/responder" method="POST">
            <h3>Responda</h3>
            <label for="">Resposta:</label>
            <textarea name="corpo" id="" cols="30" rows="5" placeholder="Digite a resposta" class="form-control"></textarea>
            <br>
            <input type="hidden" name="pergunta" id="" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-dark">Enviar</button>
        </form>
        
        <h3>Respostas</h3>
        <% respostas.forEach(resposta => {%>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <% }) %>
        
    </div>
</body>

<%- include ('partials/footer.ejs') %>



